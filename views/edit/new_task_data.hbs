<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/style.css">
    <title>Editing the task</title>
</head>
<body>
    <div class="edit-task">
        <form action="/edit" method="POST">
            <input type="hidden" name="id" value="{{this.id}}">
            <div class="task-element">
                <h3>Task title</h3>
                <input type="text" name="name" id="name">
            </div>
            <div class="task-element">
                <h3>Task status</h3>
                <div>
                    <input type="radio" name="status" id="status-todo" value="0">
                    <label for="status-todo">Todo</label>
                </div>
                <div>
                    <input type="radio" name="status" id="status-pending" value="1">
                    <label for="status-pending">Pending</label>
                </div>
                <div>
                    <input type="radio" name="status" id="status-done" value="2">
                    <label for="status-done">Done</label>
                </div>
            </div>
            <div class="task-element">
                <h3>Due of</h3>
                <input type="date" name="dueDate" id="">
            <input type="submit" value="Submit">
            </div>
        </form>
    </div>
</body>
</html>